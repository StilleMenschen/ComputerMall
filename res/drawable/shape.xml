<!-- 搜索框样式 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充颜色 -->
    <solid android:color="#ffffff" />

    <!-- 描边 -->
    <stroke
        android:width="1dip"
        android:color="#ffffff" />

    <!-- 内边距 -->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />

    <!-- 矩形圆角半径 -->
    <corners android:radius="25dp" />

</shape>